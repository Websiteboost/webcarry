---
import { getFooterContent } from '../../lib/services';

const footer = await getFooterContent();
---

<footer class="w-full bg-linear-to-t from-purple-dark/90 to-transparent border-t border-purple-neon/20 py-4 flex flex-col items-center">
  <!-- Payment Methods, Copyright & Developed By Section -->
  <div class="w-full px-6 mb-3">
    <div class="flex items-center justify-center gap-4 sm:gap-6 flex-wrap">
      <p class="text-cyber-white/80 text-sm font-medium">{footer.paymentMethodsTitle}</p>
      {footer.paymentMethods.map((method) => (
        method.type === 'paypal' ? (
          <!-- PayPal Icon -->
          <div class="flex items-center gap-2 glass-effect px-3 py-2 rounded-lg hover:border-blue-neon/50 transition-smooth">
            <svg class="w-5 h-5 text-blue-neon" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.067 8.478c.492.88.556 2.014.3 3.327-.74 3.806-3.276 5.12-6.514 5.12h-.5a.805.805 0 0 0-.794.68l-.04.22-.63 3.993-.032.17a.804.804 0 0 1-.794.679H7.72a.483.483 0 0 1-.477-.558L9.718 7.08a.972.972 0 0 1 .957-.817h4.992c1.006 0 1.746.09 2.262.261.088.03.17.059.246.09.024.01.047.024.066.038.503.222.863.572 1.056 1.106.136.378.205.804.226 1.284a4.49 4.49 0 0 1-.015.436h.002z"/>
              <path d="M10.265 7.634a.817.817 0 0 1 .805-.695h5.593c.66 0 1.218.047 1.676.143.557.116.982.332 1.287.672.286.318.484.72.614 1.227.066.267.107.558.123.877.014.27.006.57-.024.905-.24 2.468-1.605 3.712-3.975 3.712h-2.268a.973.973 0 0 0-.96.816l-.645 4.087-.028.135a.483.483 0 0 1-.477.404H9.152a.36.36 0 0 1-.355-.419l1.468-9.864z"/>
            </svg>
            <span class="text-blue-neon font-semibold text-sm">{method.name}</span>
          </div>
        ) : (
          <!-- Visa/Mastercard Icon -->
          <div class="flex items-center gap-2 glass-effect px-3 py-2 rounded-lg hover:border-green-neon/50 transition-smooth">
            <svg class="w-6 h-5 text-green-neon" fill="currentColor" viewBox="0 0 48 32">
              <rect x="0" y="0" width="48" height="32" rx="4" fill="currentColor" opacity="0.2"/>
              <rect x="4" y="8" width="40" height="4" fill="currentColor"/>
              <rect x="4" y="16" width="20" height="3" fill="currentColor"/>
              <rect x="4" y="22" width="12" height="2" fill="currentColor" opacity="0.6"/>
            </svg>
            <span class="text-green-neon font-semibold text-sm">{method.name}</span>
          </div>
        )
      ))}
      <p class="text-cyber-white/60 text-xs">{footer.copyrightText}</p>
      <p class="text-cyber-white/50 text-xs">
        Developed by <a href="https://azanorivers.com" target="_blank" rel="noopener noreferrer" class="text-purple-neon hover:text-pink-neon transition-colors font-medium">AzanoRivers</a>
      </p>
    </div>
    
    <!-- Discord & Work with Us Section -->
    {(footer.discordLink || footer.discordWorkUs) && (
      <div class="flex items-center justify-center gap-3 sm:gap-4 flex-wrap mt-3">
        {footer.discordLink && (
          <a 
            href={footer.discordLink} 
            target="_blank" 
            rel="noopener noreferrer"
            class="flex items-center gap-2 glass-effect px-3 py-1.5 rounded-lg hover:border-[#5865F2]/50 transition-smooth cursor-pointer"
          >
            <svg class="w-4 h-4 text-[#5865F2]" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
            </svg>
            <span class="text-[#5865F2] font-semibold text-xs">Discord</span>
          </a>
        )}
        
        {footer.discordWorkUs && (
          <a 
            href={footer.discordWorkUs} 
            target="_blank" 
            rel="noopener noreferrer"
            class="flex items-center gap-2 glass-effect px-3 py-1.5 rounded-lg hover:border-purple-neon/50 transition-smooth cursor-pointer"
          >
            <svg class="w-4 h-4 text-purple-neon" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20 6h-4V4c0-1.11-.89-2-2-2h-4c-1.11 0-2 .89-2 2v2H4c-1.11 0-1.99.89-1.99 2L2 19c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V8c0-1.11-.89-2-2-2zm-6 0h-4V4h4v2z"/>
            </svg>
            <span class="text-purple-neon font-semibold text-xs">Work with Us</span>
          </a>
        )}
      </div>
    )}
  </div>

  <!-- Disclaimer Section -->
  <div class="w-full px-4 sm:px-6 md:px-8 lg:px-12">
    <div class="glass-effect border border-purple-neon/20 rounded-lg p-3 sm:p-4 backdrop-blur-sm">
      <p class="text-cyber-white/70 text-xs sm:text-sm leading-relaxed text-center max-w-6xl mx-auto">
        {footer.disclaimer}
      </p>
    </div>
  </div>
</footer>
