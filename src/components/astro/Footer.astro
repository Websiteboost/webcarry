---
import { getSiteContent } from '../../utils/content-parser';

const siteContent = await getSiteContent();
const { footer } = siteContent;
---

<footer class="w-full bg-linear-to-t from-purple-dark/90 to-transparent border-t border-purple-neon/20 py-4 flex justify-center">
  <div class="w-full px-6">
    <div class="flex items-center justify-center gap-4 sm:gap-6 flex-wrap">
      <p class="text-cyber-white/80 text-sm font-medium">{footer.paymentMethodsTitle}</p>
      {footer.paymentMethods.map((method) => (
        method.type === 'paypal' ? (
          <!-- PayPal Icon -->
          <div class="flex items-center gap-2 glass-effect px-3 py-2 rounded-lg hover:border-blue-neon/50 transition-smooth">
            <svg class="w-5 h-5 text-blue-neon" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.067 8.478c.492.88.556 2.014.3 3.327-.74 3.806-3.276 5.12-6.514 5.12h-.5a.805.805 0 0 0-.794.68l-.04.22-.63 3.993-.032.17a.804.804 0 0 1-.794.679H7.72a.483.483 0 0 1-.477-.558L9.718 7.08a.972.972 0 0 1 .957-.817h4.992c1.006 0 1.746.09 2.262.261.088.03.17.059.246.09.024.01.047.024.066.038.503.222.863.572 1.056 1.106.136.378.205.804.226 1.284a4.49 4.49 0 0 1-.015.436h.002z"/>
              <path d="M10.265 7.634a.817.817 0 0 1 .805-.695h5.593c.66 0 1.218.047 1.676.143.557.116.982.332 1.287.672.286.318.484.72.614 1.227.066.267.107.558.123.877.014.27.006.57-.024.905-.24 2.468-1.605 3.712-3.975 3.712h-2.268a.973.973 0 0 0-.96.816l-.645 4.087-.028.135a.483.483 0 0 1-.477.404H9.152a.36.36 0 0 1-.355-.419l1.468-9.864z"/>
            </svg>
            <span class="text-blue-neon font-semibold text-sm">{method.name}</span>
          </div>
        ) : (
          <!-- Visa/Mastercard Icon -->
          <div class="flex items-center gap-2 glass-effect px-3 py-2 rounded-lg hover:border-green-neon/50 transition-smooth">
            <svg class="w-6 h-5 text-green-neon" fill="currentColor" viewBox="0 0 48 32">
              <rect x="0" y="0" width="48" height="32" rx="4" fill="currentColor" opacity="0.2"/>
              <rect x="4" y="8" width="40" height="4" fill="currentColor"/>
              <rect x="4" y="16" width="20" height="3" fill="currentColor"/>
              <rect x="4" y="22" width="12" height="2" fill="currentColor" opacity="0.6"/>
            </svg>
            <span class="text-green-neon font-semibold text-sm">{method.name}</span>
          </div>
        )
      ))}
      <p class="text-cyber-white/60 text-xs">{footer.copyrightText}</p>
      <p class="text-cyber-white/50 text-xs">
        Developed by <a href="https://azanorivers.com" target="_blank" rel="noopener noreferrer" class="text-purple-neon hover:text-pink-neon transition-colors font-medium">AzanoRivers</a>
      </p>
    </div>
  </div>
</footer>
